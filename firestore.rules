rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin access
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Public access for reservations (availability)
    match /reservations/{reservation} {
      allow read: if true;
      allow create: if true; // Allows customers to make booking requests
    }
  }
}
